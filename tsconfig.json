{
  "compilerOptions": {
    "declaration": false,
    "esModuleInterop": true,
    "jsx": "react",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "$game/constants": ["./game/constants/index"],
      "$game/index": ["./game/index"],
      "$game/ipc": ["./game/ipc/index"],
      "$game/types": ["./game/types/index"],
      "$game/utils": ["./game/utils/index"],
      "$game/utils/*": ["./game/utils/*"],
      "$front/utils": ["./front/utils/index"],
      "$front/types": ["./front/types/index"]
    }
  },
  "include": [
    "game/**/*",
    "editor/**/*",
    "front/**/*"
  ]
}
