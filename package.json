{
  "name": "hot7s",
  "private": true,
  "version": "0.1.0",
  "author": "FalconPilot",
  "repository": "https://github.com/FalconPilot/hot7s",
  "scripts": {
    "clean": "rm -rf dist/",
    "build": "yarn run clean && yarn run build:ts",
    "build:static": "cp -r game/static dist/game/static",
    "build:ts": "tsc --project tsconfig.json && yarn run paths && yarn run build:static",
    "paths": "yarn run paths:game && yarn run paths:front && yarn run paths:editor",
    "paths:editor": "tscpaths -p tsconfig.json -s ./editor -o ./dist/editor",
    "paths:front": "tscpaths -p tsconfig.json -s ./front -o ./dist/front",
    "paths:game": "tscpaths -p tsconfig.json -s ./game -o ./dist/game",
    "pretty": "prettier --write ./game/**/*.ts && prettier --write ./editor/**/*.ts && prettier --write ./front/**/*.ts",
    "start": "electron dist/game/index.js",
    "start:editor": "electron dist/editor/index.js"
  },
  "dependencies": {
    "@emotion/react": "^11.1.5",
    "@emotion/styled": "^11.1.5",
    "@figouzes/falcon-css": "^0.3.12",
    "configparser": "^0.3.8",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-redux": "^7.2.2",
    "redux": "^4.0.5"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-node-resolve": "^11.1.1",
    "@rollup/plugin-typescript": "^8.1.1",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-redux": "^7.1.16",
    "electron": "^11.2.1",
    "prettier": "^2.2.1",
    "tscpaths": "^0.0.9",
    "typescript": "^4.1.3"
  }
}
